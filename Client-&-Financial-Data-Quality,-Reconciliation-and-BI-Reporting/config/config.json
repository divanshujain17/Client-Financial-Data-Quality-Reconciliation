{
  "project_info": {
    "name": "Banking Data Quality & Reconciliation",
    "version": "1.0.0",
    "author": "Portfolio Project",
    "created": "2026-02-01",
    "description": "Comprehensive analysis using 4 real-world banking datasets from Kaggle and GitHub"
  },
  
  "datasets_used": {
    "dataset_1": {
      "name": "Financial Transactions Dataset (Simulated)",
      "source": "Kaggle",
      "url": "https://www.kaggle.com/datasets/cankatsrc/financial-transactions-dataset",
      "file": "financial_transactions.csv",
      "use_case": "Operational transactions table for reconciliation and variance analysis",
      "primary_purpose": "Transaction data profiling and trend creation"
    },
    "dataset_2": {
      "name": "Transaction Data for Banking Operations",
      "source": "Kaggle",
      "url": "https://www.kaggle.com/datasets/ziya07/transaction-data-for-banking-operations",
      "file": "banking_operations.csv",
      "use_case": "Transaction types (deposit, transfer, withdrawal) for dashboard metrics",
      "primary_purpose": "Build dashboards and totals by type/month"
    },
    "dataset_3": {
      "name": "Banking and Customer Transaction Data",
      "source": "Kaggle",
      "url": "https://www.kaggle.com/datasets/yogeshtekawade/banking-and-customer-transaction-data",
      "file": "customer_transactions.csv",
      "use_case": "Master customer data joined with transaction history",
      "primary_purpose": "Customer-level reconciliation and business insights"
    },
    "dataset_4": {
      "name": "SQL + Power BI Combined Financial Dashboard Project",
      "source": "GitHub",
      "url": "https://github.com/Govindkv/SQL_Power_BI_Combined_Project",
      "files": ["credit_card.csv", "customer_info.csv"],
      "use_case": "Credit card and customer info for enhanced analytics",
      "primary_purpose": "Enrich customer data with credit information"
    }
  },
  
  "data_sources": {
    "primary_transaction_file": "financial_transactions.csv",
    "secondary_transaction_file": "banking_operations.csv",
    "customer_file": "customer_transactions.csv",
    "credit_file": "credit_card.csv",
    "encoding": "utf-8",
    "note": "Files should be placed in Datasets/ folder"
  },
  
  "analysis_settings": {
    "reconciliation_tolerance_pct": 1.0,
    "outlier_detection_method": "IQR",
    "outlier_threshold_multiplier": 1.5,
    "quality_score_threshold": 90
  },
  
  "date_columns": [
    "transaction_date",
    "created_date",
    "signup_date"
  ],
  
  "rfm_settings": {
    "segments": {
      "champions": {"min_score": 13, "max_score": 15},
      "loyal_customers": {"min_score": 10, "max_score": 12},
      "potential_loyalists": {"min_score": 7, "max_score": 9},
      "at_risk": {"min_score": 5, "max_score": 6},
      "lost": {"min_score": 3, "max_score": 4}
    }
  },
  
  "output_settings": {
    "outputs_folder": "outputs",
    "save_format": "csv",
    "powerbi_export_format": "xlsx",
    "chart_dpi": 300
  },
  
  "database_connection": {
    "enabled": false,
    "type": "postgresql",
    "host": "localhost",
    "port": 5432,
    "database": "banking_analytics",
    "schema": "public"
  },
  
  "quality_rules": {
    "completeness_threshold": 95,
    "uniqueness_threshold": 99,
    "integrity_threshold": 95,
    "validity_checks": {
      "age_min": 18,
      "age_max": 120,
      "amount_min": 0,
      "amount_max": 1000000
    }
  }
}
